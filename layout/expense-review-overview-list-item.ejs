<tr>
  <td>
    <div class="d-flex align-items-center">
      <div class="category-color-index bg-<%= backgroundColor %>"></div>
      <p class="fs-8"><%= category %></p>
    </div>
  </td>
  <td class="second-column">
    <div class="d-flex align-items-center flex-wrap">
      <p
        class="spent-amount me-3 font-Nunito fw-semibold <%=spentAmount > budget ? 'overbudget' : '' %>"
      >
        $<%= spentAmount.toLocaleString('en-IN') %>
      </p>

      <div
        class="progress"
        role="progressbar"
        aria-label="progress bar"
        aria-valuenow="<%= spentAmount / budget * 100 %>%"
        aria-valuemin="0"
        aria-valuemax="100"
      >
        <div
          class="progress-bar"
          style="width: <%= spentAmount / budget * 100 %>%"
        ></div>
      </div>
    </div>
  </td>
  <td>
    <p class="font-Nunito fw-semibold">
      $<%= budget.toLocaleString('en-IN') %>
    </p>
  </td>
</tr>
