<li class="budget-card-wrapper py-5 px-4 list-hover">
  <a href="<%= hasBudget === "true"? "review-budget-details.html" : "review-budget-empty.html" %>">
    <div class="budget-card d-flex align-items-center">
      <div class="me-4">
        <!-- category image-->
        <img
          src="../assets/images/icon/account/<%= categoryImage %>.svg"
          alt="<%= categoryImage %>"
        />
      </div>
      <div class="flex-grow-1 me-4">
        <div class="d-flex f-between-center mb-1 flex-wrap">
          <!-- category -->
          <p class="fs-7"><%= category %></p>
          <!-- budget count -->
          <% if( hasBudget === "true"){ %>
          <p class="fs-8">
            剩餘：<span class="font-Nunito fw-semibold"
              >$<%= (budget - spentAmount).toLocaleString('en-IN') %></span
            >
          </p>
          <% } else { %> <% } %>
        </div>
        <!-- progress bar -->
        <% if( hasBudget === "true"){ %>
        <div
          class="progress mb-1"
          role="progressbar"
          aria-label="progress bar"
          aria-valuenow="<%= spentAmount / budget * 100 %>%"
          aria-valuemin="0"
          aria-valuemax="100"
          style="height: 8px;"
        >
          <div
            class="progress-bar"
            style="height:8px; width: <%= spentAmount / budget * 100 %>%"
          ></div>
        </div>
        <% } else { %> <% } %>
        <!-- budget count details -->
        <div class="fs-9 text-gray-600">
          <p>
            已用：<span>$<%= spentAmount.toLocaleString('en-IN') %></span>
            <% if(hasBudget === "true"){ %>
            <span>/ $<%= budget.toLocaleString('en-IN') %></span>
            <% } else { %> <% } %>
          </p>
        </div>
      </div>

      <!-- arrow -->
      <div>
        <img
          src="../assets/images/icon/arrow-right/arrow_right_pressed.svg"
          alt=""
        />
      </div>
    </div>
  </a>
</li>
